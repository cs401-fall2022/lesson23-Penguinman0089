        <h3>Blog posts</h3>
        <ul>
            {% for txt in data%}
            <ul>{{txt.blog_id}} - {{txt.blog_txt}}  </ul>
            {% endfor%}
        </ul>

        <hr>
        <h3>Add Post</h3>
        <form action="/add" method="POST">
            <div>
                <label for="blog">What is your Post?</label>
                <input name="blog" id="blog" value="Hi this is my post!" />
            </div>
            <div>
                <button>Send my blog</button>
            </div>
        </form>
        <hr>
        <h3>Delete Post</h3>
                <form action="/delete" method="POST">
            <div>
                <label for="blog">Post to delete?</label>
                <input name="blog" id="blog" value="1" />
            </div>
            <div>
                <button>delete my post</button>
            </div>
        </form>
    </body>
